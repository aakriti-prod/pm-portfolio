{
  "name": "pm-portfolio",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc -b && vite build",
    "build:production": "NODE_ENV=production tsc -b tsconfig.production.json && vite build --mode production",
    "build:staging": "NODE_ENV=staging tsc -b && vite build --mode staging",
    "build:analyze": "tsc -b && vite build --mode analyze",
    "build:performance": "tsc -b && vite build && npm run analyze-bundle",
    "analyze-bundle": "npx vite-bundle-analyzer dist",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "preview": "vite preview",
    "preview:production": "npm run build:production && vite preview",
    "performance-test": "npm run build && npm run preview",
    "test": "vitest",
    "test:run": "vitest run",
    "test:accessibility": "vitest run accessibility",
    "test:coverage": "vitest run --coverage",
    "deploy:vercel": "vercel --prod",
    "deploy:netlify": "netlify deploy --prod",
    "deploy:preview:vercel": "vercel",
    "deploy:preview:netlify": "netlify deploy",
    "pre-deploy": "npm run lint && npm run test:run && npm run build:production && npm run validate-build",
    "validate-build": "node scripts/validate-build.js",
    "validate-deployment": "npm run build:production && npm run validate-build && npm run preview:production"
  },
  "dependencies": {
    "framer-motion": "^12.23.12",
    "lucide-react": "^0.539.0",
    "react": "^19.1.1",
    "react-dom": "^19.1.1"
  },
  "devDependencies": {
    "@axe-core/react": "^4.10.2",
    "@eslint/js": "^9.33.0",
    "@tailwindcss/line-clamp": "^0.4.4",
    "@testing-library/jest-dom": "^6.7.0",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/react": "^19.1.10",
    "@types/react-dom": "^19.1.7",
    "@vitejs/plugin-react": "^5.0.0",
    "autoprefixer": "^10.4.21",
    "eslint": "^9.33.0",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.20",
    "globals": "^16.3.0",
    "jest-axe": "^10.0.0",
    "jsdom": "^26.1.0",
    "postcss": "^8.5.6",
    "tailwindcss": "^3.4.17",
    "terser": "^5.43.1",
    "typescript": "~5.8.3",
    "typescript-eslint": "^8.39.1",
    "vite": "^7.1.2",
    "vite-plugin-pwa": "^1.0.2",
    "vitest": "^3.2.4",
    "workbox-webpack-plugin": "^7.3.0"
  }
}
